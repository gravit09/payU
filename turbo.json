{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "prisma:generate"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [
        "NEXTAUTH_SECRET",
        "SECRET_KEY",
        "DATABASE_URL",
        "WEBHOOK_URL",
        "WEBHOOK_SECRET",
        "NODE_ENV"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "env": ["NEXTAUTH_SECRET", "SECRET_KEY", "DATABASE_URL"]
    },
    "check-types": {
      "dependsOn": ["^check-types"],
      "env": ["NEXTAUTH_SECRET", "SECRET_KEY", "DATABASE_URL"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
